font-1 = "Ubuntu Nerd Font:size=16;3"
font-2 = "Font Awesome 5 Free:style=Regular:pixelsize=8;1"
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=8;1"
font-4 = "Font Awesome 5 Brands:pixelsize=8;1"

modules-left =desno3 temperature1 desno4 desno1 wireless-network desno2
modules-center =tp2 clock tp1
modules-right =  levo3 pavolume levo4 levo1 arch-aur-updates levo2 battery

separator =

;dim-value = 1.0

